# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Frontend (public key)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Backend (service key - keep secret!)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ============================================
# OPENAI CONFIGURATION
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key
VITE_OPENAI_API_KEY=sk-proj-your-openai-api-key

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret

# ============================================
# TWILIO CONFIGURATION
# ============================================
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid

# ============================================
# RESEND EMAIL CONFIGURATION
# ============================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# ============================================
# WEB PUSH CONFIGURATION
# ============================================
# Generate with: npm run generate:vapid
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============================================
# GEMINI API (Optional)
# ============================================
# Get from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001/api
SERVER_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3004
CORS_ORIGIN=http://localhost:3004

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================
# Use if you have a PostgreSQL database
DATABASE_URL=postgresql://user:password@localhost:5432/telemarketing

# ============================================
# NOTES
# ============================================
# - VITE_* variables are accessible in the frontend
# - Non-VITE variables are only accessible in the backend
# - Keep .env.local in .gitignore (never commit secrets)
# - Copy .env.example to .env.local and fill in your values
# - All REQUIRED variables must be set for the app to work properly

